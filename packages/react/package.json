{
  "name": "effect-mermaid-react",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "React components for effect-mermaid diagram rendering",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/effect-mermaid.git",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/yourusername/effect-mermaid/tree/main/packages/react#readme",
  "bugs": {
    "url": "https://github.com/yourusername/effect-mermaid/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/dist/esm/index.js",
  "types": "./dist/dist/dts/index.d.ts",
  "files": [
    "dist/dist/cjs",
    "dist/dist/esm",
    "dist/dist/dts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bunx tsc -b tsconfig.build.json && bunx babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps && bunx babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps && bunx node ../../node_modules/@effect/build-utils/main.js pack-v2",
    "check": "bunx tsc -b tsconfig.json",
    "test": "bunx vitest run",
    "test:ci": "bunx vitest run --coverage"
  },
  "dependencies": {
    "effect": "^3.19.0",
    "effect-mermaid": "*",
    "react": "^18.2.0",
    "mermaid": "^10.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-export-namespace-from": "^7.24.7",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@effect/build-utils": "^0.8.9",
    "@effect/language-service": "latest",
    "@effect/vitest": "^0.25.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^22.5.2",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^3.2.0",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "jsdom": "^24.0.0",
    "tsx": "^4.17.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
